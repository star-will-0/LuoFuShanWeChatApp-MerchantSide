<view class="card">
  <view class="row" style="margin-bottom: 18rpx;">
    <text style="font-weight: 600; font-size: 34rpx;">商家端登录</text>
  </view>

  <view style="margin-top: 10rpx;">
    <view class="muted" style="margin-bottom: 8rpx;">账号</view>
    <input placeholder="请输入商家账号" value="{{username}}" bindinput="onUsernameInput" />
  </view>

  <view style="margin-top: 18rpx;">
    <view class="muted" style="margin-bottom: 8rpx;">密码</view>
    <input placeholder="请输入密码" password value="{{password}}" bindinput="onPasswordInput" />
  </view>

  <button class="btn-primary" style="margin-top: 24rpx;" loading="{{loading}}" disabled="{{loading}}" bindtap="onLogin">
    登录
  </button>

  <view class="muted" style="margin-top: 16rpx; font-size: 24rpx;">
    提示：商家账号由管理端创建
  </view>
</view>


