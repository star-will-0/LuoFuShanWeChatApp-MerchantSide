.login-container {
  min-height: 100vh;
  padding: 80rpx 0 40rpx;
  display: flex;
  flex-direction: column;
}

.login-header {
  text-align: center;
  padding: 0 40rpx;
}

.login-logo {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.login-tips {
  margin-top: 60rpx;
  padding: 0 40rpx;
}

.input-group {
  width: 100%;
}

.input-group input {
  display: block;
  width: 100%;
  min-height: 80rpx;
  padding: 26rpx 20rpx;
  line-height: 1.6;
}


