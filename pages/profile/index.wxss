.profile-header-card {
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  margin-bottom: 0;
  border-radius: 0 0 20rpx 20rpx;
  padding: 32rpx 28rpx;
}

.profile-header-card .text-title {
  color: #fff;
}

.badge-group {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-wrap: wrap;
}

.logout-btn-wrapper {
  display: flex;
  align-items: flex-start;
  padding-top: 4rpx;
  margin-left: 20rpx;
}

.logout-btn {
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.25);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 28rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  white-space: nowrap;
  transition: all 0.2s ease;
  backdrop-filter: blur(8rpx);
}

.logout-btn:active {
  background: rgba(255, 255, 255, 0.35);
  transform: scale(0.95);
}

.info-card {
  margin-top: 0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
}


