.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.input-group input {
  min-height: 80rpx;
  padding: 26rpx 20rpx;
  line-height: 1.6;
}

.redeem-card {
  background: linear-gradient(135deg, #f0f9f4 0%, #ffffff 100%);
  border: 2rpx solid #e8f8f0;
}

.result-card {
  margin-top: 24rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid #e8f8f0;
}

.result-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
}

.filter-card {
  margin-top: 0;
  border-radius: 0;
  padding: 24rpx 28rpx;
  background: #fafbfc;
}

.record-card {
  margin-top: 0;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.record-card:active {
  background: #f8f9fa;
}


