page {
  background: #f5f6fa;
  color: #1f2329;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 32rpx 28rpx;
  margin: 24rpx 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.06);
}

/* 布局工具类 */
.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.row-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.gap-small {
  gap: 12rpx;
}

.gap-medium {
  gap: 20rpx;
}

/* 文字样式 */
.muted {
  color: #8a8f99;
  font-size: 24rpx;
}

.text-primary {
  color: #07c160;
  font-weight: 600;
}

.text-danger {
  color: #fa5151;
}

.text-success {
  color: #07c160;
}

.text-warning {
  color: #ff9500;
}

.text-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2329;
}

.text-subtitle {
  font-size: 28rpx;
  font-weight: 500;
  color: #1f2329;
}

.text-label {
  font-size: 24rpx;
  color: #646a73;
  margin-bottom: 12rpx;
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  padding: 24rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s ease;
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.25);
}

.btn-primary[disabled] {
  background: #c8c9cc;
  box-shadow: none;
  opacity: 0.6;
}

.btn-secondary {
  background: #f2f3f5;
  color: #1f2329;
  border: 1rpx solid #e6e8eb;
  border-radius: 16rpx;
  font-size: 28rpx;
}

.btn-danger {
  background: #fa5151;
  color: #fff;
  border-radius: 16rpx;
}

/* 输入框样式 */
input {
  border: 2rpx solid #e6e8eb;
  border-radius: 16rpx;
  padding: 26rpx 20rpx;
  background: #fff;
  font-size: 28rpx;
  line-height: 1.6;
  min-height: 80rpx;
  height: auto;
  transition: all 0.3s ease;
  box-sizing: border-box;
  width: 100%;
  vertical-align: middle;
}

input::placeholder {
  color: #c8c9cc;
  font-size: 28rpx;
  line-height: 1.6;
  opacity: 1;
}

input:focus {
  border-color: #07c160;
  box-shadow: 0 0 0 4rpx rgba(7, 193, 96, 0.1);
}

/* 状态标签 */
.badge {
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.badge-success {
  background: #e8f8f0;
  color: #07c160;
}

.badge-warning {
  background: #fff4e6;
  color: #ff9500;
}

.badge-danger {
  background: #ffeaea;
  color: #fa5151;
}

.badge-info {
  background: #e6f4ff;
  color: #1989fa;
}

/* 分隔线 */
.divider {
  height: 1rpx;
  background: #e6e8eb;
  margin: 24rpx 0;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #8a8f99;
}

.empty-state-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

/* 加载状态 */
.loading-wrapper {
  text-align: center;
  padding: 40rpx;
  color: #8a8f99;
}

/* 区块标题 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}


