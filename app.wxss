page {
  background: #f7f8fa;
  color: #1f2329;
  font-size: 28rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.muted {
  color: #8a8f99;
}

.btn-primary {
  background: #07c160;
  color: #fff;
}

.btn-danger {
  background: #fa5151;
  color: #fff;
}


